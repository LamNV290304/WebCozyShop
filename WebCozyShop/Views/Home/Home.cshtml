@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="mb-3">Welcome to CozyShop!</h1>
        <p class="lead text-muted">Manage your shop easily and efficiently.</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bx bx-user fs-1 text-primary mb-3"></i>
                    <h5 class="card-title">Users</h5>
                    <p class="card-text text-muted">View, add, and manage users.</p>
                    <a href="/Home/Home" class="btn btn-outline-primary btn-sm">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bx bx-box fs-1 text-success mb-3"></i>
                    <h5 class="card-title">Products</h5>
                    <p class="card-text text-muted">Manage your product catalog.</p>
                    <a href="/Home/Huhu" class="btn btn-outline-success btn-sm">Go to Products</a>
                </div>
            </div>
        </div>
    </div>
</div>