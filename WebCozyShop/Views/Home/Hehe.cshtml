@{
    ViewData["Title"] = "Profile";
    var user = Model as WebCozyShop.Models.User;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    @* <div class="avatar mx-auto mb-3" style="width: 80px; height: 80px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="bx bx-user text-white" style="font-size: 2.5rem;"></i>
                    </div> *@
                    <h4 class="mb-1 text-white">@(user?.FullName ?? "John Doe")</h4>
                    <p class="mb-0">@(user?.Email ?? "john.doe@cozyshop.com")</p>
                </div>
                
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded">
                                <h6 class="text-muted mb-1">Username</h6>
                                <p class="mb-0">@(user?.Username ?? "johndoe")</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded">
                                <h6 class="text-muted mb-1">Email</h6>
                                <span class="badge bg-secondary">@(user?.Role ?? "Member")</span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded">
                                <h6 class="text-muted mb-1">Full Name</h6>
                                <p class="mb-0">@(user?.FullName ?? "John Doe")</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded">
                                <h6 class="text-muted mb-1">Email</h6>
                                <p class="mb-0">@(user?.Email ?? "john.doe@cozyshop.com")</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded">
                                <h6 class="text-muted mb-1">Phone</h6>
                                <p class="mb-0">@(user?.Phone ?? "+1 234 567 890")</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded">
                                <h6 class="text-muted mb-1">Date of Birth</h6>
                                <p class="mb-0">01/01/1990</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="#" class="btn btn-primary me-2">Edit Profile</a>
                        <a href="#" class="btn btn-outline-secondary">Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>